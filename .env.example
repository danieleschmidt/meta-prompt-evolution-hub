# Meta-Prompt-Evolution-Hub Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/meta_prompt_hub
POSTGRES_DB=meta_prompt_hub
POSTGRES_USER=prompt_user
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# Ray Cluster Configuration
RAY_ADDRESS=ray://localhost:10001
RAY_DASHBOARD_HOST=127.0.0.1
RAY_DASHBOARD_PORT=8265

# LLM Provider APIs
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key

# Evaluation Configuration
MAX_CONCURRENT_EVALUATIONS=100
EVALUATION_TIMEOUT_SECONDS=30
SURROGATE_MODEL_THRESHOLD=0.9

# A/B Testing Configuration
MIN_SAMPLE_SIZE=1000
CONFIDENCE_LEVEL=0.95
STATISTICAL_POWER=0.8

# Monitoring & Observability
PROMETHEUS_METRICS_PORT=9090
GRAFANA_DASHBOARD_PORT=3000
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# Security Configuration
SECRET_KEY=your-secret-key-for-jwt
JWT_EXPIRATION_HOURS=24
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Development Configuration
DEBUG=false
TESTING=false
CACHE_DISABLED=false

# Storage Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
DATA_RETENTION_DAYS=365

# Performance Configuration
WORKER_CONCURRENCY=4
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT_SECONDS=30